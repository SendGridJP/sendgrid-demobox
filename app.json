{
  "name": "DemoBox",
  "description": "sendgrid demo application",
  "website": "https://github.com/SendGridJP/sendgrid-demobox",
  "repository": "https://github.com/SendGridJP/sendgrid-demobox",
  "env": {
    "APP_URL": {
      "description": "アプリケーションURL(App Nameを指定することで確定するURL)",
      "value": "http://sample-demobox.herokuapp.com",
      "required": true
    },
    "PARSE_HOST": {
      "description": "「メールを受ける」でメール受信するドメイン名。所有しているドメインを利用する場合、合わせてMXレコードを設定変更する必要あり。詳しくは：https://sendgrid.kke.co.jp/blog/?p=827",
      "value": "",
      "required": true
    },
    "BASIC_AUTH_USERNAME": {
      "description": "基本認証ユーザ名",
      "value": "admin",
      "required": false
    },
    "BASIC_AUTH_PASSWORD": {
      "description": "基本認証パスワード",
      "value": "password",
      "required": false
    },
    "TOS": {
      "description": "「メールを送る」の宛先アドレス初期値。カンマ区切りでアドレスを2つ以上指定。",
      "value": "",
      "required": false
    },
    "FROM": {
      "description": "「メールを送る」の送信元アドレス初期値",
      "value": "",
      "required": false
    },
    "BCC": {
      "description": "「メールを送る」のBccアドレス初期値",
      "value": "",
      "required": false
    }
  },
  "addons": [
    "sendgrid"
  ]
}
